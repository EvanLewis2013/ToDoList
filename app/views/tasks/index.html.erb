<h1>Evan's Super-Duper Important To-Do's</h1>

<br/>

  <h4>Things to do</h4>

<%= simple_form_for @task do |f| %>
  <%= f.input :name %>
  <%= f.button :submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>To Do</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to "edit", edit_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
